{
  "version": 2,
  "builds": [
    {
      "src": "/server/server.js",
      "use": "@now/node-server"
    },
    {
      "src": "/public/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*).png",
      "dest": "/public/img/$1.png"
    },
    {
      "src": "/(.*).css",
      "dest": "/public/$1.css"
    },
    {
      "src": "/(.*).js",
      "dest": "/public/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server/server.js"
    }
  ]
}
