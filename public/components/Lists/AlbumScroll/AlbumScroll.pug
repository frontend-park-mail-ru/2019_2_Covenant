div(class="albums-container")
	div(class="headline dark size-20")=title
	ul(class="hs no-scrollbar")
		if albums.length > 0
			each album in albums
				div(class="album-item")
					div(class="album-item__img")
						img(src=album.photo alt="" class="album-item__img-inner" id=`scroll-album-img-${album.id}`)
					div(class="album-item__title" id=`scroll-album-title-${album.id}`)=album.name
					div(class="album-item__subtitle" id=`scroll-album-artist-title-${album.id}`)=album.artist