form(class="form_wrapper")
    div(class="form_inner")
        h1(class="text-center")="Log In"
        div(class="input_container")
            label(for="login__email_input" class="input_label")="Email"
            input(class="input_field" type="email" name="Email" id="login__email_input")
        div(class="input_container")
            label(for="login__password_input" class="input_label")="Password"
            input(class="input_field" type="password" name="Password" id="login__password_input")
        button(type="submit" class="form_btn")="Log In"
        span(class="link" id="no-account-link")="Don't have an account?"