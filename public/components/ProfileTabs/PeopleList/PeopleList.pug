ddiv(class="tab-grid")
	div(class="tab-grid__column")
		each item in items
			div(class="tab-grid__item")
				div(class="track__avatar-container")
						div(class="track__avatar")
							div(class="track__avatar-img" style=`background: url(${item.avatar}) no-repeat center/cover;` id=`track-avatar-control-${item.id}`)
								img(class="track__arrow" src="/static/img/play-arrow.png" alt="" id=`track-arrow-${item.id}`)
				div(class="track__name-container")
					div(class="track__name")
						div(class="track__title")=item.email
						div(class="track__subtitle")=`@${item.nickname}`


