				div(class="header__link")="Sign Up"
				div(class="header__link")="Log In"
		else
			div(class="header__user-container-inner")
				div(class="user-nickname pr-10")="Adam Brody"
				div(class="user-logo")
					img(class="user-logo__img" src="img/brody.png" alt="img")
