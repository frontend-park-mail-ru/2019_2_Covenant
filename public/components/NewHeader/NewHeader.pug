	div(class="header__search-container table")
		div(class="header__search-container-inner table-cell")
			div(class="search table")
				div(class="seach__img-container table-cell")
					img(class="search__img" src="img/search-purple.png" alt="img")
				input(class="search__input" type="text" placeholder="Search")
